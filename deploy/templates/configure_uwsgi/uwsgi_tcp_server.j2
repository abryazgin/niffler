[uwsgi]
env = CONFIG_PATH={{ _config_path }}

module = wsgi:application

master = true
processes = 5

http-socket = :{{ _listen_uwsgi_port }}

vacuum = true

die-on-term = true
# daemonize = {{ _log_root }}/uwsgi.log

# http://stackoverflow.com/questions/22752521/uwsgi-flask-sqlalchemy-and-postgres-ssl-error-decryption-failed-or-bad-reco
lazy = true
lazy-apps = true